<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="80sp"
        android:layout_height="98sp"
        android:background="@drawable/selector_list_view_left_side"
        android:gravity="center|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/view_bittorrent_search_result_list_item_filetype_icon"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_gravity="center|center_vertical"
            android:background="@drawable/audio_selector_off"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/selector_list_view_right_side"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/view_bittorrent_search_result_list_item_title"
                style="@style/list_item_title"
                android:text="@string/dummy_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/view_bittorrent_search_result_list_item_file_size"
                style="@style/list_item_text"
                android:layout_marginLeft="5sp"
                android:text="@string/dummy_size"
                android:textColor="#ffe9a54c" />

            <TextView
                android:id="@+id/view_bittorrent_search_result_list_item_text_extra"
                style="@style/list_item_text"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:text="@string/dummy_extra" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/view_bittorrent_search_result_list_item_text_source"
                style="@style/list_item_text"
                android:autoLink="web"
                android:clickable="true"
                android:linksClickable="true"
                android:singleLine="true"
                android:textColor="#FF0000FF"
                android:text="@string/dummy_engine" />

            <TextView
                android:id="@+id/view_bittorrent_search_result_list_item_text_seeds"
                style="@style/list_item_text"
                android:layout_gravity="right|center_vertical"
                android:text="@string/dummy_sources" />
        </LinearLayout>
    </LinearLayout>

    <!--
    TODO: This button will go away, and tapping on any part of this item
    (except on parts that have specific actions) will start the download.
    -->


