<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_view_right_side"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/view_browse_peer_list_item_filetype_icon"
        android:layout_width="42sp"
        android:layout_height="42sp"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="3sp"
        android:background="@drawable/application_selector_off"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/view_browse_peer_list_item_file_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="3sp"
        android:layout_toRightOf="@+id/view_browse_peer_list_item_filetype_icon"
        android:singleLine="true"
        android:text="@string/dummy_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/view_browse_peer_list_item_lock_toggle"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_below="@+id/view_browse_peer_list_item_filetype_icon"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="2sp"
        android:layout_marginLeft="5sp"
        android:background="@null"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/unlocked" />

    <TextView
        android:id="@+id/view_browse_peer_list_item_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_browse_peer_list_item_lock_toggle"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@+id/view_browse_peer_list_item_lock_toggle"
        android:text="@string/dummy_size"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffe9a54c" />

    <TextView
        android:id="@+id/view_browse_peer_list_item_extra_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/view_browse_peer_list_item_file_size"
        android:layout_alignBottom="@+id/view_browse_peer_list_item_file_size"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="5sp"
        android:layout_toRightOf="@+id/view_browse_peer_list_item_file_size"
        android:text="@string/dummy_extra"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/view_browse_peer_list_item_download"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="5sp"
        android:background="@null"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/download_round_button" />

</RelativeLayout>