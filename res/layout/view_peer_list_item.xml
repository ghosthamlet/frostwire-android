<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:background="@drawable/selector_list_view_left_side"
        android:gravity="center|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/view_peer_list_item_icon"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_gravity="center|center_vertical"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/selector_list_view_right_side"
        android:gravity="left|center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/view_peer_list_item_wifi_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/wifi" />

            <TextView
                android:id="@+id/view_peer_list_item_title"
                style="@style/list_item_title"
                android:text="@string/dummy_title" />
        </LinearLayout>

        <TextView
            android:id="@+id/view_peer_list_item_summary"
            style="@style/list_item_text"
            android:text="@string/dummy_summary" />

        <TextView
            android:id="@+id/view_peer_list_item_version"
            style="@style/list_item_text"
            android:text="@string/dummy_version"
            android:textColor="#ffcccccc" />
    </LinearLayout>

    <LinearLayout android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:background="@drawable/selector_list_view_right_side"
        android:gravity="center|center_vertical">
    	<ImageButton
    		android:id="@+id/view_peer_list_item_button_how_to_share"
    		android:layout_width="36dp"
    		android:layout_height="36dp"
    		android:layout_gravity="center|center_vertical"
    		android:background="@null"
    		android:scaleType="fitCenter"
    		android:contentDescription="@null"
    		android:src="@drawable/share_howto" />
    </LinearLayout>
</LinearLayout>